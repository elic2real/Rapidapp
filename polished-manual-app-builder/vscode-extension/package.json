{
  "name": "ai-debug-assistant",
  "displayName": "AI Debug Assistant",
  "description": "Next-generation AI-powered debugging companion with autonomous problem-solving",
  "version": "1.0.0",
  "publisher": "toorapidship",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Debuggers",
    "AI",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "ai",
    "debugging",
    "error-prevention",
    "autonomous",
    "llm",
    "assistant"
  ],
  "activationEvents": [
    "onCommand:ai-debug.startDebugging",
    "onCommand:ai-debug.analyzeError",
    "onCommand:ai-debug.openErrorGuide",
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:rust",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-debug.startDebugging",
        "title": "Start AI Debug Session",
        "category": "AI Debug",
        "icon": "$(debug-start)"
      },
      {
        "command": "ai-debug.analyzeError",
        "title": "Analyze Current Error",
        "category": "AI Debug",
        "icon": "$(search)"
      },
      {
        "command": "ai-debug.openErrorGuide",
        "title": "Open Error Prevention Guide",
        "category": "AI Debug",
        "icon": "$(book)"
      },
      {
        "command": "ai-debug.toggleAssistant",
        "title": "Toggle AI Debug Assistant",
        "category": "AI Debug",
        "icon": "$(robot)"
      },
      {
        "command": "ai-debug.requestHelp",
        "title": "Request AI Help",
        "category": "AI Debug",
        "icon": "$(question)"
      },
      {
        "command": "ai-debug.showDashboard",
        "title": "Show AI Debug Dashboard",
        "category": "AI Debug",
        "icon": "$(dashboard)"
      },
      {
        "command": "ai-debug.treeOfThoughts",
        "title": "Tree of Thoughts Analysis",
        "category": "AI Debug",
        "icon": "$(git-branch)"
      },
      {
        "command": "ai-debug.reactDebugging",
        "title": "ReAct Debugging Mode",
        "category": "AI Debug",
        "icon": "$(sync)"
      }
    ],
    "keybindings": [
      {
        "command": "ai-debug.analyzeError",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-debug.requestHelp",
        "key": "ctrl+shift+h",
        "when": "editorTextFocus"
      },
      {
        "command": "ai-debug.toggleAssistant",
        "key": "ctrl+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ai-debug.analyzeError",
          "when": "editorHasSelection",
          "group": "ai-debug@1"
        },
        {
          "command": "ai-debug.requestHelp",
          "when": "editorTextFocus",
          "group": "ai-debug@2"
        }
      ],
      "explorer/context": [
        {
          "command": "ai-debug.startDebugging",
          "when": "resourceExtname =~ /\\.(py|js|ts|rs)$/",
          "group": "ai-debug@1"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "ai-debug-panel",
          "name": "AI Debug Assistant",
          "when": "ai-debug.enabled"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ai-debug-container",
          "title": "AI Debug Assistant",
          "icon": "$(robot)"
        }
      ]
    },
    "configuration": {
      "title": "AI Debug Assistant",
      "properties": {
        "ai-debug.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable AI Debug Assistant"
        },
        "ai-debug.ollama.endpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server endpoint"
        },
        "ai-debug.defaultModel": {
          "type": "string",
          "default": "llama3.2",
          "description": "Default AI model for debugging"
        },
        "ai-debug.autoAnalyze": {
          "type": "boolean",
          "default": true,
          "description": "Automatically analyze errors as they occur"
        },
        "ai-debug.debuggingMode": {
          "type": "string",
          "enum": ["standard", "tree-of-thoughts", "react", "intelligent"],
          "default": "intelligent",
          "description": "AI debugging approach"
        },
        "ai-debug.expertiseLevel": {
          "type": "string",
          "enum": ["junior", "senior", "architect", "specialist"],
          "default": "senior",
          "description": "User expertise level for AI responses"
        },
        "ai-debug.privacyMode": {
          "type": "boolean",
          "default": true,
          "description": "Enable privacy mode (no external API calls)"
        }
      }
    },
    "languages": [
      {
        "id": "ai-debug-log",
        "aliases": ["AI Debug Log"],
        "extensions": [".ailog"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ai-debug-log",
        "scopeName": "source.ailog",
        "path": "./syntaxes/ailog.tmGrammar.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ws": "^8.14.0",
    "marked": "^9.1.0"
  }
}
