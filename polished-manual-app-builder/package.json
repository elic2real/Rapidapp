{
  "name": "polished-manual-app-builder",
  "version": "1.0.0",
  "description": "Production-ready AI-assisted app builder with event sourcing and real-time collaboration",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build",
    "test": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:int": "vitest run tests/integration",
    "test:e2e": "playwright test",
    "test:security": "vitest run tests/security",
    "test:perf": "k6 run tests/performance/k6/appmaker_scenarios.js",
    "e2e:headed": "playwright test --headed",
    "coverage:report": "vitest run --coverage --reporter=lcov",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix && prettier --write .",
    "ci": "pnpm lint && pnpm typecheck && pnpm test && pnpm test:e2e && pnpm test:security && pnpm test:perf",
    "cli": "tsx packages/templates/src/cli.ts"
  },
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "devDependencies": {
    "@turbo/gen": "^1.13.4",
    "@types/node": "^20.8.0",
    "eslint": "^8.50.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^3.0.3",
    "tsx": "^3.14.0",
    "turbo": "^1.13.4",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.6.0",
    "@opentelemetry/auto-instrumentations-node": "^0.39.4",
    "@opentelemetry/exporter-jaeger": "^1.17.0",
    "@opentelemetry/exporter-prometheus": "^0.43.0",
    "@opentelemetry/sdk-node": "^0.43.0",
    "pino": "^8.15.0",
    "zod": "^3.22.4"
  }
}
